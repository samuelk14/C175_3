<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="proyecto2.app1.com.example.pc.c175.SwitchesFragment">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SWITCHES"
        android:textStyle="bold"
        android:textColor="#ffc400"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="179dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="99dp"
        android:layout_height="50dp"
        android:text="OIL FILTER"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="#ffc400"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="63dp" />

    <Switch
        android:id="@+id/switch4"
        android:layout_width="99dp"
        android:layout_height="50dp"
        android:text="COOLANT LEVEL"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="#ffc400"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/switch3"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="63dp" />

    <Switch
        android:id="@+id/switch5"
        android:layout_width="99dp"
        android:layout_height="50dp"
        android:text="FUEL WATER SEPARATOR LEVEL"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="#ffc400"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/switch4"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="63dp" />

    <Switch
        android:id="@+id/switch6"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="FUEL PRIMMING PUMP SWITCH"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="#ffc400"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/switch5"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="63dp" />

    <Switch
        android:id="@+id/switch7"
        android:layout_width="99dp"
        android:layout_height="50dp"
        android:text="THROTTEL BACKUP"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="#ffc400"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/switch3"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="44dp" />

    <Switch
        android:id="@+id/switch8"
        android:layout_width="99dp"
        android:layout_height="50dp"
        android:text="E-STOP USER SHUTDOWN"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="#ffc400"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/switch4"
        app:layout_constraintLeft_toRightOf="@+id/switch7"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="44dp" />

    <Switch
        android:id="@+id/switch9"
        android:layout_width="99dp"
        android:layout_height="50dp"
        android:text="SHUTDOWN SWITCH"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="#ffc400"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/switch5"
        app:layout_constraintLeft_toRightOf="@+id/switch8"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="44dp" />

    <Switch
        android:id="@+id/switch10"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="KEY SWITCH"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="#ffc400"
        android:gravity="center"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@+id/switch6"
        app:layout_constraintLeft_toRightOf="@+id/switch9"
        android:layout_marginLeft="10dp" />



</android.support.constraint.ConstraintLayout>
